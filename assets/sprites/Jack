#sprite Jack
    :file sprites/Jack.png
    :size 4 6

;anim is alias for animation
;anim State frame [direction]
;anim State frames <count>
;anim State speed <fps>

    :anim idle 0.0 down 
    :anim idle 0.1 up
    :anim idle 0.2 right
    :anim idle 0.3 left
    :anim idle frames 1
    :anim idle speed 3
    
    :anim walking 1.0 down
    :anim walking 1.1 up
    :anim walking 1.2 right
    :anim walking 1.3 left
    :anim walking frames 5
    :anim walking speed 5
